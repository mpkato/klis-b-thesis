\renewcommand{\maketitle}{
    \begin{titlepage}
      \newgeometry{left=30truemm,right=30truemm,top=30truemm,bottom=30truemm}
      \let\footnotesize\small
      \let\footnoterule\relax
      \let\footnote\thanks
      \vskip 60\jsc@mpt
      \begin{center}
        \null\vfil
        {\LARGE \textgt{\@title} \par}
        \ifdefined \@subtitle
          \vskip 1em
          {\LARGE \textgt{— \@subtitle —} \par}
        \fi
        \vskip 12em
        {\Large \@gradyear 年 \@gradmonth 月 \par}
        \vskip 8em
        {\Large \@studentid \par}  
        {\Large \@author \par}
        \vskip 8em        
        {\Large \@affiliation \par}
        \vskip 1.5em
      \end{center}
    \end{titlepage}
  }%
  
